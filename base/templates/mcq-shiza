<body>

    <div class="container">
        <h1>Choose an option</h1>
        <div class="options">
            <div class="option-box">
                <a href="{% url 'game_panel' game_type='option 1' %}">Option 1</a>
            </div>
            <div class="option-box">
                <a href="{% url 'game_panel' game_type='option 2' %}">Option 2</a>
            </div>
            <div class="option-box">
                <a href="{% url 'game_panel' game_type='option 3' %}">Option 3</a>
            </div>
            <div class="option-box">
                <a href="{% url 'game_panel' game_type='option 4' %}">Option 4</a>
            </div>
        </div>

        <div class="selected-message" id="selected-message">
            <!-- Message will appear here -->
        </div>
    </div>

    <script>
        // Get all the option boxes
        const optionBoxes = document.querySelectorAll('.option-box');
        const selectedMessage = document.getElementById('selected-message');

        // Add click event handler to each box
        optionBoxes.forEach(box => {
            box.addEventListener('click', function(event) {
                event.preventDefault(); // Prevent the default link navigation
                const selectedOption = this.textContent.trim(); // Get the selected option text
                
                // Display the selected option to the user
                selectedMessage.textContent = `${selectedOption} has been selected!`;
                selectedMessage.style.display = 'block';

                // Optionally, you can implement your own routing logic here
                // For example, using window.location.href to navigate:
                // window.location.href = this.querySelector('a').href;
            });
        });
    </script>

</body>
